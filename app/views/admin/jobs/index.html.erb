<div class="pull-right">
  <%= link_to("Add a job", new_admin_job_path, :class => "btn btn-default" ) %>
</div>

<br><br>

<table class="table table-boldered">
  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%= render_job_status(job) %>

      <%= link_to(job.title, admin_job_path(job)) %>
    </td>
    <td>
      <%#= link_to("Edit", edit_admin_job_path(job), :class => "btn btn-xs btn-default btn-info") %> <!-- "btn btn-xs btn-default btn-info"为bootstrap语法 -->
      <%= link_to edit_admin_job_path(job), class: "btn btn-xs btn-default btn-info" do %><i class="fa fa-pencil"></i><% end %>
      <%#= link_to("Destroy", admin_job_path(job), :method => :delete, :class => "btn btn-xs btn-default btn-danger", :data => { :confirm => "Are you sure?" }) %>
      <%= link_to admin_job_path(job), :method => :delete, :class => "btn btn-xs btn-default btn-danger", :data => { :confirm => "Are you sure?" } do %><i class="fa fa-trash-o"></i><% end %>

      <% if job.is_hidden %>
        <%#= link_to("Publish", publish_admin_job_path(job) , :method => :post, :class => "btn btn-xs btn-default btn-success") %>
        <%= link_to publish_admin_job_path(job) , :method => :post, :class => "btn btn-xs btn-default btn-success" do %><i class="fa fa-eye"></i><% end %>
      <% else %>
        <%#= link_to("Hide", hide_admin_job_path(job), :method => :post,  :class => "btn btn-xs btn-default btn-warning") %>
        <%= link_to hide_admin_job_path(job), :method => :post,  :class => "btn btn-xs btn-default btn-warning" do %><i class="fa fa-eye-slash"></i><% end %>
      <% end %>
    </td>
    <td>
      <%= job.created_at %>
    </td>
  </tr>
  <% end %>
</table>
